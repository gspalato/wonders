    "@apacheli/eslint-config-ts": "github:apacheli/eslint-config-ts",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "typescript": "^4.5.5"
  }
}